      <a href="#slide2" class="btn btn-circle">❮</a> 
      <a href="#slide4" class="btn btn-circle">❯</a>
    </div>
  </div> 
</div>

<div class="w-[90%] mx-auto mt-4">
    <div>
        <div class="grid gap-4 sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-3 justify-center items-center">
        <div class="w-full h-[300px] relative">
            <img src="/thumbnail/Gallery-6.jpg" class="w-full" />
            <div class="absolute top-0 bg-neutral opacity-90 duration-300">
                <a asp-action="" class="p-2 text-base-100 text-2xl hover:text-primary duration-300">Fashion Style</a>
            </div>
        </div>
        <div class="w-full h-[300px] relative">
            <img src="/thumbnail/Gallery-6.jpg" class="w-full" />
            <div class="absolute top-0 bg-neutral opacity-90 duration-300">
                <a asp-action="" class="p-2 text-base-100 text-2xl hover:text-primary duration-300">Fashion Style</a>
            </div>
        </div>
        <div class="w-full h-[300px] relative">
            <img src="/thumbnail/Gallery-6.jpg" class="w-full" />
            <div class="absolute top-0 bg-neutral opacity-90 duration-300">
                <a asp-action="" class="p-2 text-base-100 text-2xl hover:text-primary duration-300">Fashion Style</a>
            </div>
        </div>
    </div>
    </div>

    <div class="divider font-bold text-2xl ">BÀI VIẾT MỚI NHẤT</div> 

    <div class="content">
        <div class="flex flex-col gap-10">
            @foreach (var item in listLatestPost)
            {
                <div class="flex flex-col lg:flex-row gap-10">
                <img src="/thumbnail/@item.Thumbnail" class="w-full max-w-[600px] lg:min-w-[600px] h-[300px] object-cover hover:cursor-pointer hover:opacity-90 duration-300"/>
                <div class="flex flex-col h-[300px]">
                    <a asp-action="Index" asp-controller="Blog" asp-route-slug="@item.Slug" class="text-3xl my-2 font-bold text-neutral">@item.Title</a>
                    <h4 class="text-lg my-2 font-medium text-base-300 ">@item.CategoryName / @item.CreatedAt</h4>
                    <p class="text-xl my-2 font-medium text-base-content">Lorem ipsum dolor sit amet consectetur adipiscing elit. Phasellus dignissim purus facilisis libero suscipit vulputate.Vestibulum rutrum...</p>
                </div>
            </div>
            }
        </div>
    </div>
</div>
</main>